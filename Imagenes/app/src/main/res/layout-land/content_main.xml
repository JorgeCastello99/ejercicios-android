<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="18dp"
        android:text="@string/textview"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageAstronauta"
        app:layout_constraintEnd_toEndOf="@+id/imageAstronauta"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:text="@string/esto_es_una_flor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFlor" />

    <ImageView
        android:id="@+id/imageAstronauta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="17dp"
        android:contentDescription="TODO"
        android:onClick="onClickAstronauta"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageFlor"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/astro" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="166dp"
        android:layout_height="69dp"
        android:layout_marginStart="288dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="62dp"
        android:text="@string/esto_es_un_astronauta"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAstronauta" />

    <ImageView
        android:id="@+id/imageFlor"
        android:layout_width="0dp"
        android:layout_height="127dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="44dp"
        android:contentDescription="@string/todo"
        android:onClick="onClickImagenFlor"
        app:layout_constraintEnd_toStartOf="@+id/imageAstronauta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flor" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="210dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="89dp"
        android:text="@string/esto_es_un_saludo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="16dp"
        android:onClick="onClickSaludo"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageAstronauta"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/manos" />
</androidx.constraintlayout.widget.ConstraintLayout>